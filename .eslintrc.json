{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"indent": ["off", "tab"],
		"quotes": ["error", "single"],
		"semi": ["warn", "always"],
		"react/react-in-jsx-scope": "off",
		"max-len": ["error", { "code": 120, "tabWidth": 4 }],
		"no-unused-vars": "warn",
		"prettier/prettier": [
			"warn",
			{
				"endOfLine": "auto"
			}
		]
	}
}
